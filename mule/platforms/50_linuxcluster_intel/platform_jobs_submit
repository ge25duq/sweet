#! /bin/bash

#
# Submit jobs
#
# Return
# ------
# Job ID in each line
#

if [[ -z "$MULE_USER_EMAIL" ]]; then
       echo "***************************************************************************************************************"
       echo "* ERROR: Please set the env variable MULE_USER_EMAIL in mule/local/platforms/50_linuxcluster_intel/env_vars.sh!"
       echo "* LRZ does not let you submit jobs without an email                                                           *"
       echo "***************************************************************************************************************"
       exit 1
fi

if [[ -z "$1" ]]; then
	DIRS=job_bench*
else
	DIRS=$@
fi

for i in $DIRS; do
	sbatch --parsable "$i/run.sh" | sed "s/;.*//"
done

