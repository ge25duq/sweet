#! /usr/bin/env bash

#
# Execute all jobs by directly running them from the current shell
#


if [[ -z "$1" ]]; then
	DIRS=job_bench*
else
	DIRS=$@
fi

P="$(pwd)"
for JOBDIR in $DIRS; do
	cd "$JOBDIR" || exit 1

	echo_info "Executing job in directory '$JOBDIR'"

	./run.sh 2>"output.err" > "./output.out" &
	./run.sh 2>"output.err" > "./output.out"

	#SCRIPT_PID=$!
        ## Wait for finish
        #wait $SCRIPT_PID

	cd "$P"
done

